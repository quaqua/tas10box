$('#tas10-main-container').tas10Container( 'append', {
  replace: true,
  title: '<%= t('preferences.title') %>', 
  id: '_preferences', 
  content: '<%= escape_javascript render('preferences/form') %>'
  }, function( container ){
    $(container).find('.tas10-settings-tabs').tas10SettingsTabs();
    $('.preferences-form button').die().live('click', function(e){
      e.preventDefault();
      if( $(this).find('.icon-minus').length )
        $(this).closest('.input-append').remove();
      if( $(this).find('.icon-plus').length ){
        var div = $(this).closest('.input-append')
          , newdiv = div.clone();
        newdiv.find('.icon-plus').removeClass('icon-plus').addClass('icon-minus')
        div.before( newdiv );
      }
    });
  }
);