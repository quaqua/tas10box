<% if flash[:notice] && @doc %>
  <% @doc.attributes.each_pair do |key,attr| %>
    <% next if key == 'name' %>
    <% next if attr.blank? || !%w(String Fixnum).include?(attr.class.name) %>
    $('[data-attr-name="<%= key %>-<%= @doc.id %>"]').text( '<%= escape_javascript(attr.to_s) %>' );
    $('[data-attr-name="<%= key %>-<%= @doc.id %>"]').effect('highlight', { color: '#fc6' }, 2000 );
  <% end %>
  $('[data-attr-name="name-<%= @doc.id %>"]').text( '<%= escape_javascript(@doc.name) %>' );
  $('[data-attr-name="name-<%= @doc.id %>"]').effect('highlight', { color: '#fc6' }, 2000 );
  <% if @close_dialog %>
    tas10.dialog('close');
  <% end %>
<% end %>
<%= render "common/process_flash" %>