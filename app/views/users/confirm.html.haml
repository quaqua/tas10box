- unless flash.empty?
  - if flash[:notice]
    .login-error-container.notice
      %span= flash[:notice]
  - else
    .login-error-container
      %span= flash[:error]

.login-logo

.login-container

  = form_for( @user, :html => {:onsubmit => "checkPassword();"} ) do |f|
    = f.hidden_field :confirmation_key
    = f.hidden_field :email
    %p.desc
      = raw t('user.password_desc')

    %p
      %label= t('login.password')
    %p
      = f.password_field( :password, :class => "js-get-focus new-password", :style => "width: 200px" )

    %p
      %label= t('login.password_confirm')
    %p
      = f.password_field( :password_confirmation, :class => "confirm-password", :style => "width: 200px" )

      =f.submit( t('user.activate'), :class => "btn btn-inverse" )

